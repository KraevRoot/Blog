%h3 User info
%table.table
  %thead
    %th id
    %th username
    %th email
    %th last sign in
    %th role
  %tbody
    %tr
      %td= @user.id
      %td= @user.name
      %td= @user.email
      %td= @user.last_sign_in_at.localtime.strftime("%m/%d/%Y at %I:%M%p")
      %td= @user.role

%h3 Posts:
%table.table
  %thead
    %th post_id
    %th title
    %th created_at
    %th updated_at
  %tbody
    - @user.posts.each do |post|
      %tr
        %td= link_to post.id, post_path(post.id)
        %td= post.title
        %th= post.created_at.localtime.strftime("%m/%d/%Y at %I:%M%p")
        %th= post.updated_at.localtime.strftime("%m/%d/%Y at %I:%M%p")

%h3 Comments:
%table.table
  %thead
    %th comment_id
    %th content
    %th post_id
    %th created_at
  %tbody
    - @user.comments.each do |comment|
      %tr
        %td= comment.id
        %td= comment.content 
        %td= comment.post_id
        %td= comment.created_at.localtime.strftime("%m/%d/%Y at %I:%M%p")

%h3 Actions:
= link_to 'DELETE THIS USER', admin_user_path(@user), method: :delete
