%br
= button_to 'New user', new_admin_user_path, method: :get, class: 'btn btn-default'
%table.table
  %thead
    %th id
    %th name
    %th email
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.id, admin_user_path(user)
        %td= user.name
        %td= user.email
        %td= link_to '', admin_user_path(user), method: :delete, class: 'glyphicon glyphicon-remove'
