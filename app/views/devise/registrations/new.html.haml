%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-inputs
    = f.input :email, required: true, autofocus: true, error: false
    = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), error: false
    = f.input :password_confirmation, required: true, error: false
  .form-actions
    = f.button :submit, "Sign up"
= render "devise/shared/links"
