%h1 Create new Post

= simple_form_for @post do |f|
  .form-inputs
    = f.input :title, placeholder: 'Enter title'
    = f.input :content, as: :text, placeholder: 'Content'
    - Category.all.each do |category|
      = check_box_tag "post[category_ids][]", category.id
      = category.name
      %br
  = f.button :submit, 'Create post'
  
